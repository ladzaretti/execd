CREATE TABLE
    IF NOT EXISTS requests (
        uuid TEXT PRIMARY KEY,
        path TEXT NOT NULL,
        state TEXT NOT NULL,
        stdout TEXT,
        stderr TEXT,
        detached INTEGER DEFAULT 0,
        pid INTEGER,
        exit_code INTEGER,
        error TEXT,
        started_at TEXT DEFAULT (strftime ('%Y-%m-%d %H:%M:%f', 'now')),
        completed_at TEXT
    );